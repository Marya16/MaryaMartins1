<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaryaMartins.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Image Source="florestaaa.png"
               Aspect="Fill"/>
               
        <Image x:Name="Jogo"
        VerticalOptions="End"/> 

     
       <Frame Background="#AAE362"
              BorderColor="Black"
              CornerRadius="30"
              HeightRequest="110"
              Margin="8,13,8,13"
              VerticalOptions="Start"> 

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="40"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="*"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions> 

            <ProgressBar x:Name="progressBarFome"
                 VerticalOptions="Start"
                 ProgressColor="Blue"
                 Grid.Column="1"
                 Grid.Row="0"/> 
            <ProgressBar x:Name="progressBarSede"
                 VerticalOptions="Start"
                 ProgressColor="Blue"
                 Grid.Column="1"
                 Grid.Row="1"/>

            <ProgressBar x:Name="progressBarBrincadeira"
                 VerticalOptions="Start"
                 ProgressColor="Red"
                 Grid.Column="1"
                 Grid.Row="2"/>  
   
          </Grid>
        </Frame>

    </Grid>
</ContentPage>
